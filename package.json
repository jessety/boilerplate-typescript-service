{
  "name": "boilerplate-typescript-service",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "homepage": "https://github.com/jessety/boilerplate-typescript-service#readme",
  "bugs": {
    "url": "https://github.com/jessety/boilerplate-typescript-service/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jessety/boilerplate-typescript-service.git"
  },
  "license": "MIT",
  "author": "Jesse Youngblood",
  "type": "module",
  "main": "./build/index.js",
  "directories": {
    "lib": "build",
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "build:start": "npm run build && npm run start",
    "clean": "rimraf build",
    "lint": "eslint . && ec .",
    "format": "sort-package-json && prettier --write '**/*.{ts,js,json,yml,md}' && eslint --fix .",
    "start": "node build/index.js",
    "start:watch": "nodemon",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@jessety/eslint-config": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^15.6.1",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^7.27.0",
    "husky": "^7.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.49.0",
    "ts-jest": "^27.0.1",
    "typescript": "^4.1.5"
  }
}
